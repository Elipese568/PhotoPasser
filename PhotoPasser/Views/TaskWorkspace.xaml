<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PhotoPasser.Views.TaskWorkspace"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhotoPasser.Models"
    xmlns:viewmodels="using:PhotoPasser.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tk="using:CommunityToolkit.WinUI.Controls"
    xmlns:conv="using:PhotoPasser.Converters"
    xmlns:helper="using:PhotoPasser.Helper"
    xmlns:controls="using:PhotoPasser.Controls"
    xmlns:collections="using:System.Collections.Generic"
    xmlns:sys="clr-namespace=System;assembly=mscorlib"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:behaviors="using:PhotoPasser.Behaviors"
    xmlns:p="using:PhotoPasser.Primitive" xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    mc:Ignorable="d">
    <Page.Resources>
        <conv:UriImageSourceConverter x:Key="UriImageSourceConverter"/>
        <DataTemplate x:Key="ResultViewItem" x:DataType="local:FiltResult">
            <Grid Height="64" CornerRadius="{StaticResource OverlayCornerRadius}">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Style="{ThemeResource BodyStrongTextBlockStyle}" Text="{x:Bind Name,Mode=OneWay}"/>
                    <TextBlock Grid.Row="1" Style="{ThemeResource BodyTextBlockStyle}" TextWrapping="Wrap" VerticalAlignment="Stretch" Text="{x:Bind Description,Mode=OneWay}"/>
                    <TextBlock Grid.Row="1" Style="{ThemeResource CaptionTextBlockStyle}" Text="{x:Bind Date}" Margin="0,2,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Right" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <Viewbox Grid.Row="0" Margin="2" HorizontalAlignment="Right" VerticalAlignment="Top" Height="14" Width="14">
                        <IconSourceElement  IconSource="{x:Bind IsFavorite,Mode=OneWay,Converter={StaticResource FavoriteIconSourceConverter}}"/>
                    </Viewbox>
                </Grid>
            </Grid>
        </DataTemplate>
        <Style x:Key="ResultItemsList" TargetType="ListView">
            <Setter Property="Padding" Value="-4,0"/>
            <Setter Property="ItemTemplate" Value="{StaticResource ResultViewItem}"/>
        </Style>
        <StackPanel x:Name="RemoveTips" Spacing="16">
            <TextBlock>Once it’s gone, it’s gone. Are you sure you want to delete the file(s)?</TextBlock>
            <CheckBox x:Name="CheckToRemoveRealFile" Content="Remove physical file"/>
        </StackPanel>
        <conv:BooleanToObjectConverter x:Key="EnabledTextConverter"
                                       TrueObject="Enabled"
                                       FalseObject="Disabled"/>
    </Page.Resources>
    <NavigationView x:Name="NavigationViewer" 
                    Style="{StaticResource StoreNavigationiewStyle}"
                    IsSettingsVisible="false" 
                    SelectionChanged="NavigationViewer_SelectionChanged" 
                    IsBackButtonVisible="Collapsed" 
                    ItemInvoked="NavigationViewer_ItemInvoked">
        <NavigationView.MenuItems>
            <NavigationViewItem Icon="Library" Tag="Resources" IsSelected="True">
                <TextBlock x:Uid="ms-resource:///TaskWorkspace/ResourcesNavigationItemHeader" Style="{ThemeResource CaptionTextBlockStyle}"/>
            </NavigationViewItem>
            <NavigationViewItem Tag="Results">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xF168;" />
                </NavigationViewItem.Icon>
                <TextBlock x:Uid="ms-resource:///TaskWorkspace/ResultsNavigationItemHeader" Style="{ThemeResource CaptionTextBlockStyle}"/>
            </NavigationViewItem>
            <NavigationViewItem Tag="Properties">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE946;" />
                </NavigationViewItem.Icon>
                <TextBlock x:Uid="ms-resource:///TaskWorkspace/PropertiesNavigationItemHeader" Style="{ThemeResource CaptionTextBlockStyle}"/>
            </NavigationViewItem>
        </NavigationView.MenuItems>
        <NavigationView.FooterMenuItems>
            <NavigationViewItem Icon="Home" Tag="Home" SelectsOnInvoked="True">
                <TextBlock x:Uid="ms-resource:///TaskWorkspace/HomeNavigationItemHeader" Style="{ThemeResource CaptionTextBlockStyle}"/>
            </NavigationViewItem>
            <NavigationViewItem Icon="Play" Tag="StartFiltering" SelectsOnInvoked="True">
                <TextBlock x:Uid="ms-resource:///TaskWorkspace/StartFilteringNavigationItemHeader" Style="{ThemeResource CaptionTextBlockStyle}"/>
            </NavigationViewItem>
        </NavigationView.FooterMenuItems>
        <tk:SwitchPresenter Grid.Row="1" Value="{Binding SelectedItem.Tag,ElementName=NavigationViewer}">
            <tk:SwitchPresenter.ContentTransitions>
                <TransitionCollection>
                    <PopupThemeTransition/>
                </TransitionCollection>
            </tk:SwitchPresenter.ContentTransitions>
            <tk:Case Value="Resources">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="120" />
                        <RowDefinition Height="1" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <controls:ImageMaskSurface BackgroundImage="{x:Bind ViewModel.FiltTask.PresentPhoto, Converter={StaticResource UriImageSourceConverter}, Mode=OneWay}"
                                               ImageStretch="UniformToFill"
                                               ImageVerticalAlignment="Center"
                                               AutoMaskColor="True"
                                               Grid.Row="0">
                        <controls:ImageMaskSurface.MaskStops>
                            <controls:MaskStop Offset="0.0" Alpha="255"/>
                            <controls:MaskStop Offset="1.0" Alpha="200"/>
                        </controls:ImageMaskSurface.MaskStops>
                        <TextBlock x:Uid="ms-resource:///TaskWorkspace/ResourcesViewTitle" x:Name="ResTitle" Margin="36,40,36,36" Text="Resources" Style="{ThemeResource TitleTextBlockStyle}"/>
                    </controls:ImageMaskSurface>
                    
                    <Border Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}"
                            Height="{Binding ActualHeight,ElementName=ResourceOperationBar}"
                            RelativePanel.AlignLeftWithPanel="True"
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.AlignTopWithPanel="True"
                            BorderBrush="{ThemeResource DividerStrokeColorDefault}"
                            BorderThickness="0,1,0,0"
                            Grid.Row="1"/>
                    <controls:PhotoGalleryViewer Photos="{x:Bind ViewModel.Photos, Mode=TwoWay}"
                                                 CurrentView="{x:Bind ViewModel.CurrentView, Mode=TwoWay}"
                                                 SortBy="{x:Bind ViewModel.SortBy, Mode=TwoWay}"
                                                 SortOrder="{x:Bind ViewModel.SortOrder}"
                                                 ItemPanelBackground="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}"
                                                 AddResolve="PhotoGalleryViewer_AddResolve"
                                                 CopyResolve="PhotoGalleryViewer_CopyResolve"
                                                 CopyAsBitmapResolve="PhotoGalleryViewer_CopyAsBitmapResolve"
                                                 CopyAsPathResolve="PhotoGalleryViewer_CopyAsPathResolve"
                                                 DeleteResolving="PhotoGalleryViewer_DeleteResolving"
                                                 DeleteRequested="PhotoGalleryViewer_DeleteRequested"
                                                 RenameResolve="PhotoGalleryViewer_RenameResolve"
                                                 Title="{x:Bind ViewModel.FiltTask.Name,Mode=OneWay}"
                                                 Grid.Row="2"
                                                 x:Name="ResourceView">
                        <controls:PhotoGalleryViewer.ExtendedOperations>
                            <controls:PhotoItemOperation x:Name="SelectToPresent"
                                                         x:Uid="ms-resource:///TaskWorkspace/SelectToPresentOperation"
                                                         ShowAtCommandBar="True" 
                                                         Invoked="SelectToPresent_Invoked" 
                                                         Mode="Single">
                                <controls:PhotoItemOperation.DescriptiveIcon>
                                    <FontIcon Glyph="&#xE8BA;" />
                                </controls:PhotoItemOperation.DescriptiveIcon>
                            </controls:PhotoItemOperation>
                            <controls:PhotoItemOperation x:Name="FilterBasedOnSelected" 
                                                         x:Uid="ms-resource:///TaskWorkspace/FilterBasedOnSelectedOperation"
                                                         ShowAtCommandBar="True" 
                                                         Invoked="FilterBasedOnSelected_Invoked" 
                                                         Mode="Multiply"
                                                         ShowAtRightTapMenu="False">
                                <controls:PhotoItemOperation.DescriptiveIcon>
                                    <SymbolIcon Symbol="Filter"/>
                                </controls:PhotoItemOperation.DescriptiveIcon>
                            </controls:PhotoItemOperation>
                        </controls:PhotoGalleryViewer.ExtendedOperations>
                    </controls:PhotoGalleryViewer>
                </Grid>
            </tk:Case>
            <tk:Case Value="Results">
                <SplitView IsPaneOpen="True" DisplayMode="Inline" PaneBackground="{ThemeResource LayerFillColorAlt}" LightDismissOverlayMode="On">
                    <SplitView.Pane>
                        <Grid Padding="24" RowSpacing="16" BorderBrush="{ThemeResource DividerStrokeColorDefault}" BorderThickness="0,0,1,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" x:Uid="ms-resource:///TaskWorkspace/ResultsViewTitle" VerticalAlignment="Center" Style="{ThemeResource TitleTextBlockStyle}"/>
                            <SelectorBar x:Name="ResultsSelector" Grid.Row="1">
                                <SelectorBarItem x:Uid="ms-resource:///TaskWorkspace/AllResultsSelectedItem" x:Name="AllResultsSelectedItem" Tag="All" Icon="List" IsSelected="{x:Bind Not(ViewModel.IsFavoriteResultsSelection),Mode=OneWay}"/>
                                <SelectorBarItem x:Uid="ms-resource:///TaskWorkspace/FavoriteResultsSelectedItem" x:Name="FavoriteResultsSelectedItem" Tag="Favorite" IsSelected="{x:Bind ViewModel.IsFavoriteResultsSelection,Mode=TwoWay}">
                                    <SelectorBarItem.Icon>
                                        <FontIcon Glyph="&#xE735;" Foreground="{ThemeResource SystemFillColorCaution}" />
                                    </SelectorBarItem.Icon>
                                </SelectorBarItem>
                            </SelectorBar>
                            <ListView Grid.Row="2" 
                                      x:Name="ResultViewSelector"
                                      Style="{StaticResource ResultItemsList}" 
                                      SelectedItem="{x:Bind ViewModel.CurrentResult,Mode=TwoWay}" 
                                      SelectedIndex="{x:Bind ViewModel.DisplayedResultSelectedIndex,Mode=TwoWay}"
                                      SelectionChanged="ListView_SelectionChanged" 
                                      ItemsSource="{x:Bind ViewModel.DisplayedResults, Mode=OneWay}"/>
                            <TextBlock Grid.Row="2" 
                                       x:Uid="ms-resource:///TaskWorkspace/NoResultsTip"
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center" 
                                       Foreground="{ThemeResource TextFillColorSecondary}" 
                                       Visibility="{x:Bind GetEmptyTipVisibility(ViewModel.DisplayedResults),Mode=OneWay}">
                            </TextBlock>
                        </Grid>
                    </SplitView.Pane>
                    <Frame x:Name="ResultViewFrame"/>
                </SplitView>
            </tk:Case>
            <tk:Case Value="Properties">
                <Grid Padding="36,40" RowSpacing="36">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" x:Uid="ms-resource:///TaskWorkspace/PropertiesViewTitle" Style="{ThemeResource TitleTextBlockStyle}"/>

                    <StackPanel Grid.Row="1" Spacing="4">
                        <tk:SettingsCard x:Uid="ms-resource:///TaskWorkspace/NameProperty">
                            <tk:SettingsCard.HeaderIcon>
                                <FontIcon Glyph="&#xE8AC;" />
                            </tk:SettingsCard.HeaderIcon>
                            <TextBox Text="{x:Bind ViewModel.FiltTask.Name,Mode=TwoWay}"/>
                        </tk:SettingsCard>
                        <tk:SettingsCard x:Uid="ms-resource:///TaskWorkspace/DescriptionProperty">
                            <tk:SettingsCard.HeaderIcon>
                                <FontIcon Glyph="&#xE8E4;" />
                            </tk:SettingsCard.HeaderIcon>
                            <TextBox Text="{x:Bind ViewModel.FiltTask.Description,Mode=TwoWay}" AcceptsReturn="True" TextWrapping="Wrap"/>
                        </tk:SettingsCard>
                        <tk:SettingsCard x:Uid="ms-resource:///TaskWorkspace/DestinationPathProperty">
                            <tk:SettingsCard.HeaderIcon>
                                <FontIcon Glyph="&#xE8B7;" />
                            </tk:SettingsCard.HeaderIcon>
                            <TextBlock Text="{x:Bind ViewModel.FiltTask.DestinationPath}" IsTextSelectionEnabled="True" Foreground="{ThemeResource TextFillColorSecondary}"/>
                        </tk:SettingsCard>
                        <tk:SettingsCard x:Uid="ms-resource:///TaskWorkspace/CopySourceProperty">
                            <tk:SettingsCard.HeaderIcon>
                                <FontIcon Glyph="&#xE8C8;" />
                            </tk:SettingsCard.HeaderIcon>
                            <TextBlock Foreground="{ThemeResource TextFillColorSecondary}" Text="{x:Bind ViewModel.FiltTask.CopySource,Converter={StaticResource EnabledTextConverter}}"/>
                        </tk:SettingsCard>
                    </StackPanel>
                </Grid>
            </tk:Case>
        </tk:SwitchPresenter>
    </NavigationView>
</Page>
