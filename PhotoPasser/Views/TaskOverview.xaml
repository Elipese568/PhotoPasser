<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="PhotoPasser.Views.TaskOverview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:PhotoPasser.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:conv="using:PhotoPasser.Converters"
    xmlns:c="using:PhotoPasser.Controls"
    xmlns:helper="using:PhotoPasser.Helper"
    xmlns:primitive="using:PhotoPasser.Primitive"
    xmlns:tk="using:CommunityToolkit.WinUI.Controls"
    xmlns:tkconv="using:CommunityToolkit.WinUI.Converters"
    mc:Ignorable="d">
    <Page.Resources>
        <conv:UriImageSourceConverter x:Key="UriImageSourceConverter"/>
        <helper:SelfReference Value="{x:Bind}" x:Key="PageSelf"/>
        <conv:SortOrderToIconConverter x:Key="SortOrderToIconConverter"/>
        <conv:SortOrderToDescriptionConverter x:Key="SortOrderToDescriptionConverter"/>
        <conv:TaskSortByToDisplayConverter x:Key="TaskSortByToDisplayConverter"/>
        <tkconv:StringVisibilityConverter x:Key="StringVisibilityConverter" />

        <!-- Converter 定义 -->
        <conv:TaskViewTypeToIndexConverter x:Key="TaskViewTypeToIndexConverter"/>
        <conv:TaskViewItemTemplateConverter x:Key="TaskViewItemTemplateConverter">
            <conv:TaskViewItemTemplateConverter.GridItemTemplate>
                <DataTemplate x:DataType="models:FiltTask">
                    <UserControl x:Name="TaskItemPresenter_Grid" PointerEntered="LibraryItem_PointerEntered" PointerExited="LibraryItem_PointerExited" IsDoubleTapEnabled="True" DoubleTapped="TaskItemPresenter_DoubleTapped">
                        <c:ImageMaskSurface BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            Background="{ThemeResource CardBackgroundFillColorDefault}"
                                            BackgroundImage="{x:Bind PresentPhoto,Converter={StaticResource UriImageSourceConverter}}"
                                            Height="200"
                                            Width="300"
                                            CornerRadius="{StaticResource OverlayCornerRadius}">
                            <c:ImageMaskSurface.MaskStops>
                                <c:MaskStop Offset="0.0" Alpha="0"/>
                                <c:MaskStop Offset="0.2" Alpha="0"/>
                                <c:MaskStop Offset="0.4" Alpha="120"/>
                                <c:MaskStop Offset="0.576" Alpha="210"/>
                                <c:MaskStop Offset="1.0" Alpha="255"/>
                            </c:ImageMaskSurface.MaskStops>
                            <Grid ColumnSpacing="16" Padding="16" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <StackPanel Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" MaxHeight="88">
                                    <TextBlock Grid.Row="0" Style="{ThemeResource BodyStrongTextBlockStyle}" Text="{x:Bind Name,Mode=OneWay}"/>
                                    <TextBlock Grid.Row="1" Visibility="{x:Bind Description,Converter={StaticResource StringVisibilityConverter},Mode=OneWay}" Style="{ThemeResource CaptionTextBlockStyle}" TextWrapping="Wrap" Text="{x:Bind Description,Mode=OneWay}"/>
                                </StackPanel>
                                <Button Name="OptionSettingButton_Grid" Visibility="Collapsed" HorizontalAlignment="Right" Style="{StaticResource DefaultButtonStyle}" VerticalAlignment="Top">
                                    <FontIcon Glyph="&#xE712;" />
                                    <Button.Flyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem x:Uid="ms-resource:///TaskOverview/EditInformationFlyoutItem" Command="{Binding Value.ViewModel.EditTaskCommand, Source={StaticResource PageSelf}}" CommandParameter="{x:Bind}"/>
                                            <MenuFlyoutItem x:Uid="ms-resource:///TaskOverview/DeleteFlyoutItem" Command="{Binding Value.ViewModel.DeleteTaskCommand, Source={StaticResource PageSelf}}" CommandParameter="{x:Bind}"/>
                                        </MenuFlyout>
                                    </Button.Flyout>
                                </Button>
                            </Grid>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="OptionSettingButtonVisibility">
                                    <VisualState x:Name="OptionSettingButtonVisible">
                                        <VisualState.Setters>
                                            <Setter Target="OptionSettingButton_Grid.Visibility" Value="Visible"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="OptionSettingButtonDefault">
                                        <VisualState.Setters>
                                            <Setter Target="OptionSettingButton_Grid.Visibility" Value="Collapsed"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </c:ImageMaskSurface>
                    </UserControl>
                </DataTemplate>
            </conv:TaskViewItemTemplateConverter.GridItemTemplate>
            <conv:TaskViewItemTemplateConverter.ListItemTemplate>
                <DataTemplate x:DataType="models:FiltTask">
                    <UserControl x:Name="TaskItemPresenter_List" PointerEntered="LibraryItem_PointerEntered" PointerExited="LibraryItem_PointerExited" IsDoubleTapEnabled="True" DoubleTapped="TaskItemPresenter_DoubleTapped">
                        <c:ImageMaskSurface BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            Background="{ThemeResource CardBackgroundFillColorDefault}"
                                            BackgroundImage="{x:Bind PresentPhoto,Converter={StaticResource UriImageSourceConverter}}"
                                            ImageVerticalAlignment="Center"
                                            Height="80"
                                            CornerRadius="{StaticResource OverlayCornerRadius}">
                            <c:ImageMaskSurface.MaskStops>
                                <c:MaskStop Offset="0.0" Alpha="190"/>
                                <c:MaskStop Offset="1.0" Alpha="190"/>
                            </c:ImageMaskSurface.MaskStops>
                            <Grid ColumnSpacing="16" Padding="16" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Grid.Row="0" Style="{ThemeResource BodyStrongTextBlockStyle}" Text="{x:Bind Name,Mode=OneWay}"/>
                                    <TextBlock Grid.Row="1" Visibility="{x:Bind Description,Converter={StaticResource StringVisibilityConverter},Mode=OneWay}" Style="{ThemeResource CaptionTextBlockStyle}" TextWrapping="Wrap" Text="{x:Bind Description,Mode=OneWay}"/>
                                </StackPanel>
                                <TextBlock Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind Converter={StaticResource TaskDisplayTimeConverter}}">
                                    <TextBlock.Transitions>
                                        <RepositionThemeTransition/>
                                    </TextBlock.Transitions>
                                </TextBlock>
                                <Button Name="OptionSettingButton_List" Grid.Column="2" Visibility="Collapsed" HorizontalAlignment="Right" Style="{StaticResource DefaultButtonStyle}" VerticalAlignment="Center">
                                    <FontIcon Glyph="&#xE712;" />
                                    <Button.Flyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem x:Uid="ms-resource:///TaskOverview/EditInformationFlyoutItem" Command="{Binding Value.ViewModel.EditTaskCommand, Source={StaticResource PageSelf}}" CommandParameter="{x:Bind}"/>
                                            <MenuFlyoutItem x:Uid="ms-resource:///TaskOverview/DeleteFlyoutItem" Command="{Binding Value.ViewModel.DeleteTaskCommand, Source={StaticResource PageSelf}}" CommandParameter="{x:Bind}"/>
                                        </MenuFlyout>
                                    </Button.Flyout>
                                </Button>
                            </Grid>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="OptionSettingButtonVisibility">
                                    <VisualState x:Name="OptionSettingButtonVisible">
                                        <VisualState.Setters>
                                            <Setter Target="OptionSettingButton_List.Visibility" Value="Visible"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="OptionSettingButtonDefault">
                                        <VisualState.Setters>
                                            <Setter Target="OptionSettingButton_List.Visibility" Value="Collapsed"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </c:ImageMaskSurface>
                    </UserControl>
                </DataTemplate>
            </conv:TaskViewItemTemplateConverter.ListItemTemplate>
        </conv:TaskViewItemTemplateConverter>

        <!-- ItemsPanelTemplate 定义 -->
        <ItemsPanelTemplate x:Key="GridItemPanelTemplate">
            <ItemsWrapGrid Orientation="Horizontal" HorizontalAlignment="Center"/>
        </ItemsPanelTemplate>
        <ItemsPanelTemplate x:Key="ListItemPanelTemplate">
            <ItemsStackPanel Orientation="Vertical" HorizontalAlignment="Center"/>
        </ItemsPanelTemplate>

        <!-- TaskDisplayTimeConverter 绑定当前排序依据 -->
        <conv:TaskDisplayTimeConverter x:Key="TaskDisplayTimeConverter" CurrentSortBy="{x:Bind ViewModel.CurrentSortBy, Mode=OneWay}"/>
    </Page.Resources>
    <Grid RowSpacing="36" Padding="36,40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Style="{ThemeResource TitleTextBlockStyle}" x:Uid="ms-resource:///TaskOverview/HomeLabel"/>

        <!-- 排序控件区域 -->
        <Grid Grid.Row="1" ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" Spacing="16">
                <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="8">
                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondary}" Style="{StaticResource CaptionTextBlockStyle}">
                        排序依据
                    </TextBlock>
                    <ComboBox Grid.Column="1"
                          ItemsSource="{x:Bind ViewModel.SortByOptions}"
                          SelectedItem="{x:Bind ViewModel.CurrentSortBy, Mode=TwoWay}"
                          HorizontalAlignment="Stretch"
                          MinWidth="150">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="primitive:TaskSortBy">
                                <TextBlock Text="{x:Bind Converter={StaticResource TaskSortByToDisplayConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>
                <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="8">
                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondary}" Style="{StaticResource CaptionTextBlockStyle}">
                        排序顺序
                    </TextBlock>
                    <Button Grid.Column="1"
                            Command="{x:Bind ViewModel.ToggleSortDirectionCommand}"
                            ToolTipService.ToolTip="切换排序方向">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="{x:Bind ViewModel.CurrentSortOrder, Converter={StaticResource SortOrderToIconConverter},Mode=OneWay}" FontSize="16"/>
                            <TextBlock Text="{x:Bind ViewModel.CurrentSortOrder, Converter={StaticResource SortOrderToDescriptionConverter},Mode=OneWay}"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </StackPanel>
            
            <tk:Segmented Grid.Column="1" Name="ViewTypeSelector" SelectedIndex="{x:Bind ViewModel.CurrentViewType, Mode=TwoWay, Converter={StaticResource TaskViewTypeToIndexConverter}}" HorizontalAlignment="Right">
                <tk:SegmentedItem Tag="Grid">
                    <tk:SegmentedItem.Icon>
                        <FontIcon Glyph="&#xF0E2;" />
                    </tk:SegmentedItem.Icon>
                </tk:SegmentedItem>
                <tk:SegmentedItem Tag="List">
                    <tk:SegmentedItem.Icon>
                        <FontIcon Glyph="&#xEA37;" />
                    </tk:SegmentedItem.Icon>
                </tk:SegmentedItem>
            </tk:Segmented>
        </Grid>

        <Grid Grid.Row="2">
            <GridView Name="TasksView"
                      ItemsSource="{x:Bind ViewModel.Tasks, Mode=OneWay}"
                      ItemsPanel="{x:Bind GetPanel(ViewModel.CurrentViewType), Mode=OneWay}"
                      ItemTemplate="{x:Bind ViewModel.CurrentViewType, Converter={StaticResource TaskViewItemTemplateConverter}, Mode=OneWay}"
                      Padding="8,0,8,92"
                      SelectionMode="None">
                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem" BasedOn="{StaticResource DefaultGridViewItemStyle}">
                        <Setter Property="Margin" Value="4"/>
                    </Style>
                </GridView.ItemContainerStyle>
            </GridView>
            <Grid VerticalAlignment="Bottom" Margin="24">
                <Grid x:Name="ShadowCastGrid"/>
                <Border x:Name="ShadowRect" Background="{ThemeResource SolidBackgroundFillColorBase}" HorizontalAlignment="Right" Translation="0,0,32" Loaded="ShadowRect_Loaded" Width="60" Height="60" CornerRadius="30">
                    <Border.Shadow>
                        <ThemeShadow x:Name="shadow"/>
                    </Border.Shadow>
                    <Button x:Name="AddTaskButton" Command="{x:Bind ViewModel.AddTaskCommand}" CornerRadius="30" Height="60" Width="60">
                        <FontIcon Glyph="&#xE710;" FontSize="30"/>
                    </Button>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
